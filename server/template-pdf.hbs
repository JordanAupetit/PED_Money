<html>
<head>
	<meta charset="utf8">
	<link rel="stylesheet" href="http://localhost:8754/assets/libs/bootstrap/dist/css/bootstrap.min.css">
</head>
<body>
	<div class="container">
		<div class="row">
			<h1>MyMoney</h1>
		</div>
		<div class="row">
			<p>
				<h2>Bank statement <small>{{date}}</small></h2>
				<h3>{{account.name}}</h3>
				<b>OWNER :</b> {{owner}}
			</p>
		</div>
		<div class="row">
			<table class="table table-bordered table-striped">
				<thead>
					<tr>
						<th class="col-md-1">Date</th>
						<th class="col-md-1">Date</th>
						<th class="col-md-6">Description</th>
						<th class="col-md-2">Débit</th>
						<th class="col-md-2">Crédit</th>
					</tr>
				</thead>
				<tbody>
					{{#each account.operations}}
					<tr>
						<td>{{dateOperation}}</td>
						<td>{{datePrelevement}}</td>
						<td>{{description}}</td>
						<td>{{debit}}</td>
						<td>{{credit}}</td>
					</tr>
					{{/each}}
				</tbody>
				<tfoot>
					<tr>
						<td></td>
						<td></td>
						<td></td>
						<td><b>Somme</b></td>
						<td>{{account.balance}}</td>
					</tr>
				</tfoot>
			</table>
		</div>
	</div>
</body>
</html>